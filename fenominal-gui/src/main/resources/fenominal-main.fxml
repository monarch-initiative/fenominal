<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.monarchinitiative.fenominal.FenominalMainController">
    <ScrollPane prefHeight="617.0" prefWidth="998.0">
        <BorderPane prefHeight="618.0" prefWidth="999.0">
            <top>
                <HBox prefHeight="25.0" prefWidth="999.0" BorderPane.alignment="CENTER">
                    <MenuBar>
                        <Menu mnemonicParsing="false" text="File">
                            <MenuItem mnemonicParsing="false" text="Close"/>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <MenuItem mnemonicParsing="false" text="Delete"/>
                        </Menu>
                    </MenuBar>
                    <Region prefHeight="200.0" prefWidth="200.0" styleClass="menu-bar" HBox.hgrow="SOMETIMES"/>
                    <MenuBar HBox.hgrow="NEVER">
                        <Menu mnemonicParsing="false" text="Help">
                            <MenuItem mnemonicParsing="false" text="About"/>
                        </Menu>
                    </MenuBar>
                </HBox>
            </top>
            <left>
                <VBox prefHeight="591.0" prefWidth="982.0" BorderPane.alignment="CENTER">
                    <HBox prefHeight="53.0" prefWidth="982.0">
                        <Label text="FENOMINAL">
                            <font>
                                <Font name="System Bold" size="23.0"/>
                            </font>
                            <HBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </HBox.margin>
                        </Label>
                    </HBox>
                    <TextArea fx:id="parseArea" prefHeight="326.0" prefWidth="982.0"/>
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <Button fx:id="importTextFile" mnemonicParsing="false" text="Import text file">
                            <HBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="pasteClipboard" mnemonicParsing="false" onAction="#pasteClipboard"
                                text="Paste clipboard">
                            <HBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="parseButton" alignment="CENTER" contentDisplay="CENTER"
                                mnemonicParsing="false" onAction="#parseButtonPressed" text="Parse">
                            <HBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </HBox.margin>
                        </Button>
                    </HBox>
                    <HBox prefHeight="100.0" prefWidth="200.0">
                        <Button fx:id="importHpObo" mnemonicParsing="false" onAction="#importHpObo"
                                text="Import hp.obo (do this first)">
                            <HBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                            </HBox.margin>
                        </Button>
                    </HBox>
                </VBox>
            </left>
        </BorderPane>
    </ScrollPane>
</AnchorPane>
